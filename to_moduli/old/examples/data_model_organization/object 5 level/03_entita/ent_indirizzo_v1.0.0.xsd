    <xs:import namespace="http://attributi/luogo" schemaLocation="../02_attributi/att_luogo_v1.0.0.xsd"/>
    
    <xs:group name="indirizzo_group">
        <xs:sequence>
            <xs:element name="via" type="ai:via_stype" minOccurs="1" maxOccurs="1"/>
            <xs:element name="numero_civico" type="ai:numero_civico_stype" minOccurs="0" maxOccurs="1"/>            
            <xs:element name="comune" type="al:comune_stype" minOccurs="1" maxOccurs="1"/>
        </xs:sequence>        
    </xs:group>      
    
