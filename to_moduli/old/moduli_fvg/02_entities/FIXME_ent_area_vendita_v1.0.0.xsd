        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="merci_ingombranti_ctype">
        <xs:sequence>
            <xs:element name="tipo" type="vmein:merci_ingombranti_voc" minOccurs="1" maxOccurs="1"/>
            <xs:element name="superficie_vendita" type="earve:superficie_vendita_stype" minOccurs="1" maxOccurs="1"/>
        </xs:sequence>
    </xs:complexType>
    
</xs:schema>
