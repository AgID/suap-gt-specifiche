    xmlns:earve="http://agid.it/suap/entities/area_vendita"
    targetNamespace="http://agid.it/suap/entities/area_vendita"
    elementFormDefault="qualified" attributeFormDefault="qualified"    
    version="1.0.0" xml:lang="it">
    
    <xs:import namespace="http://agid.it/suap/vocabularies/settori_merceologici" schemaLocation="../01_vocabolari/voc_settori_merceologici_v1.0.0.xsd"/>
    <xs:import namespace="http://agid.it/suap/vocabularies/merci_ingombranti" schemaLocation="../01_vocabolari/voc_merci_ingombranti_v1.0.0.xsd"/>
