<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
    xmlns:vseme="http://agid.it/suap/vocabularies/settori_merceologici"
    xmlns:vmein="http://agid.it/suap/vocabularies/merci_ingombranti"
