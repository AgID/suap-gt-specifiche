    <xs:simpleType name="superficie_vendita_stype">
        <xs:restriction base="xs:positiveInteger"/>            
    </xs:simpleType>
    
    <xs:complexType name="settore_merceologico_ctype">
        <xs:sequence>
            <xs:element name="tipo" type="vseme:settori_merceologici_voc" minOccurs="1" maxOccurs="1"/>
            <xs:element name="superficie_vendita" type="earve:superficie_vendita_stype" minOccurs="1" maxOccurs="1"/>
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="prodotti_tabelle_speciali_ctype">
