{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://agid.gov.it/descrittore_istanza.json",
    "title": "descrittore istanza",
    "type": "object",
    "required": ["version"],
    "properties": {
        "version":{
            "$id": "#root/version",
            "title": "numero versione del descrittore",
            "type": "integer"
        },
        "cui": {
            "$id": "#root/cui",
            "title": "codice unico dell'istanza",
            "type": "object",
            "required": [
                "data",
                "progressive"
            ],
            "properties": {
                "data": {
                    "$id": "#root/cui/data",
                    "title": "data emissione cui",
                    "type": "string",
                    "format": "date"
                },
                "progressive": {
                    "$id": "#root/cui/progressive",
                    "title": "progressivo del cui",
                    "type": "integer"
                }
            }
        },
        "controlblock":{
            "$id": "#root/controlblock",
            "title": "blocco di controllo contenente l'hash dell'istanza, istanza corretta ed eventali integrazioni",
            "type": "object",
            "properties": {
                "instance_hash":{
                    "$id": "#root/controlblock/instance_hash",
                    "type": "string"
                },
                "corrected_instance_hash":{
                    "$id": "#root/controlblock/corrected_instance_hash",
                    "type": "string"
                },
                "instance_integration_hash":{
                    "$id": "#root/controlblock/instance_integration_hash",
                    "type": "string"
                }
            }
            
        },
        "municipality": {
            "$id": "#root/municipality",
            "title": "codice istat 6 cifre del comune in cui l'istanza Ã¨ stata presentata",
            "type": "string",
            "pattern": "^[0-9]{6}$"
        },
        "proceedings": {
            "$id": "#root/proceedings",
            "title": "procedimenti avviati",
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "proceeding_name",
                    "form",
                    "competent_administration"
                ],
                "properties": {
                    "proceeding_name": {
                        "$id": "#root/proceedings/proceeding_name",
                        "title": "nome del procedimento",
                         "type": "string",
                         "minLength": 1
                    },
                    "form": {
                        "$id": "#root/proceedings/form",
                        "title": "modulo associato al procedimento",
                        "type": "object",
                        "oneOf" : [{
                                "required" : ["structured"]
                            }, {
                                "required" : ["unstructured"]
                            }
                        ],
                        "properties": {
                            "structured": {
                                "$id": "#root/proceedings/form/structured",
                                "title": "riferimeo agli oggetti per la validazione",
                                "type": "object",
                                "required": [
                                    "xsd",
                                    "schematron"
                                ],
                                "properties": {
                                    "xsd": {
                                        "$id": "#root/proceedings/form/structured/xsd",
                                        "title": "xsd per la validazione",
                                        "type": "string",
                                        "minLength": 1
                                    },
                                    "schematron": {
                                        "$id": "#root/proceedings/form/structured/schematron",
                                        "title": "schematron per la validazione",
                                        "type": "object",
                                        "required": [
                                            "schematron_name",
                                            "phase"
                                        ],
                                        "properties": {
                                            "schematron_name": {
                                                "$id": "#root/proceedings/form/structured/xsd/schematron_name",
                                                "title": "nome del file schematron",
                                                "type": "string",
                                                "minLength": 1
                                            },
                                            "phase": {
                                                "$id": "#root/proceedings/form/structured/xsd/phase",
                                                "title": "elenco fasi da applicare allo schematron",
                                                "type": "array",
                                                "items": {"type": "string"}
                                            }
                                        }
                                    }
                                }
                            },
                            "unstructured": {
                                "$id": "#root/proceedings/form/unstructured",
                                "title": "file naming",
                                "type": "string",
                                "minLength": 1
                            }
                        }
                    },
                    "competent_administration": {
                        "$id": "#root/proceedings/competent_administration",
                        "title": "amministrazione compoetente del procedimento",
                        "type": "object",
                        "required": [
                            "administration",                            
                            "endpoint"
                        ],
                        "properties": {
                            "administration": {
                                "$id": "#root/proceedings/competent_administration/administration",
                                "title": "riferimento all'amministrazione",
                                "type": "string",
                                "minLength": 1
                            },                            
                            "endpoint": {
                                "$id": "#root/proceedings/competent_administration/endpoint",
                                "title": "endpoint degli e-service",
                                "type": "string",
                                "minLength": 1
                            }
                        }
                    }
                }
            }
        },
        "instance_status": {
            "$id": "#root/instance_status",
            "title": "stato dell'istanza",
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "state",
                    "timestamp"
                ],
                "properties": {
                    "state": {
                        "$id": "#root/instance_status/state",
                        "title": "stato dell'istanza",
                        "type": "string",
                        "enum": [
                            "presentation",
                            "receipt",
                            "correction_required"
                        ]
                    },
                    "timestamp": {
                        "$id": "#root/instance_status/timestamp",
                        "title": "timestamp del cambiamento di stato",
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    }
}
